{
    "compilerOptions":
    {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "outDir": "generators",
        "types": 
        [
            "chalk",
            "handlebars",
            "node",
            "yeoman-generator"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": 
    [
        "node_modules",
        "generators"
    ]
}